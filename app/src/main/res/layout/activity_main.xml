<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_layout0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/backgroundActivities"
    android:orientation="vertical"
    tools:context="com.example.siddhiparekh11.implicitintentassignment.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_a_layout1"
        >
        <ImageView
            android:layout_width="114dp"
            android:layout_height="101dp"
            android:src="@drawable/large_sjsu_tile"
            />
        <TextView
            android:id="@+id/activity_a_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/activitiesTextViewText"
            android:textSize="@dimen/activitiesTextViewTextSize"
            android:text="Implicit Intents"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/activity_a_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/activity_a_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/activity_a_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL: "
            android:textColor="@color/activitiesTextViewText"
            android:textSize="@dimen/activitiesTextViewTextSize"/>
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@color/closeButtonText"
            android:inputType="textUri"
            android:hint="http://"
            />

        </LinearLayout>
        <Button
            android:id="@+id/activity_a_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/activitiesButtonBackground1"
            android:onClick="onLaunch"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Launch"
            android:textSize="@dimen/activitiesButtonTextSize" />


    </LinearLayout>
    <View
        android:id="@+id/splitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#FFFFFF" />
    <LinearLayout
        android:id="@+id/activity_a_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/activity_a_layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            android:id="@+id/activity_a_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textColor="@color/activitiesTextViewText"
            android:textSize="@dimen/activitiesTextViewTextSize"/>
        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@color/closeButtonText"
            android:inputType="phone"
            android:hint="(xxx)xxx-xxxx"/>
        </LinearLayout>
        <Button
            android:id="@+id/activity_a_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/activitiesButtonBackground2"
            android:onClick="onRing"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Ring"
            android:textSize="@dimen/activitiesButtonTextSize" />


    </LinearLayout>
    <View
        android:id="@+id/splitLine_hor2"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#FFFFFF" />



    <Button
        android:id="@+id/activity_a_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close App"
        android:textSize="@dimen/activitiesButtonTextSize"
        android:textColor="@color/closeButtonText"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:background="@color/closeButtonBackground"
        android:onClick="finishMainActivity"/>
</LinearLayout>
